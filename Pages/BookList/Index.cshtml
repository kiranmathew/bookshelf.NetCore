@page
@model coresampleBookShefl.Pages.BookList.IndexModel
@{

}
<h1>Test Book page</h1>
<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">BookList</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-stripped">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Author)</td>
                            <td>@Html.DisplayFor(m => item.ISBN)</td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure, you want to delete this ?')" class="btn btn-danger">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success text-white">Edit</a>
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>No Books available</p>
            }

        </form>
    </div>

    <div class=" col-12 border p-3">
        <table class="table table-stripped">
            <tr class="table-secondary">
                <th>
                    <label asp-for="Books.FirstOrDefault().Name"></label>
                </th>
                <th>
                    <label asp-for="Books.FirstOrDefault().Author"></label>
                </th>
                <th>
                    <label asp-for="Books.FirstOrDefault().ISBN"></label>
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.Books)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.Author)</td>
                    <td>@Html.DisplayFor(m => item.ISBN)</td>
                    <td>
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure, you want to delete this ?')" class="btn btn-danger">Delete</button>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success text-white">Edit</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
